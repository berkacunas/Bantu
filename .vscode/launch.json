    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Module",
            "type": "debugpy",
            "request": "launch",
            "module": "Bantu"
        },
        {
            "name": "Python Debugger: Python File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "args": ["-db-type1", "mssql", 
                     "-db-type2", "sqlite", 
                     "-mt", 
                     "-mssql-server-name", "server-name", 
                     "-mssql-database-name", "<db-name>", 
                     "-mssql-username", "<username>",
                     "-mssql-password", "<password>",
                     "-sqlite-path", "<sqlite-path>", 
                     "-schema-clone", 
                     "-data-clone"
                    ]
        }
    ]
}